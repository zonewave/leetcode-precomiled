[flake8]
ignore = D203
exclude =
  .git,
  __pycache__,
  build,
  dist,
  .venv
  .pdm-build

count = True
show-source = True
max-complexity = 10
max-line-length = 127
statistics = True

per-file-ignores =
    ./src/precompiled/all.py: F401,F403
    ./src/precompiled/tools/print_vscode_snippets.py: W291,W293